<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.controllers.IndexController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllProductsToBuyController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.controllers.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>mate.academy.controllers.InjectDataController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>mate.academy.controllers.AddProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUsers</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteUsers</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showCart</servlet-name>
        <servlet-class>mate.academy.controllers.ShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showCart</servlet-name>
        <url-pattern>/shoppingCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>mate.academy.controllers.AddProductToShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/products/addToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteFromCart</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteProductFromShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteFromCart</servlet-name>
        <url-pattern>/carts/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>completeOrder</servlet-name>
        <servlet-class>mate.academy.controllers.CompleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>completeOrder</servlet-name>
        <url-pattern>/completeOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showOrders</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllUserOrdersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showOrders</servlet-name>
        <url-pattern>/MyOrders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductFromShop</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteProductFromShopController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProductFromShop</servlet-name>
        <url-pattern>/deleteProductFromShop</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProductsForAdmin</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllProductsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allProductsForAdmin</servlet-name>
        <url-pattern>/AllProductsForAdmin</url-pattern>
    </servlet-mapping>

</web-app>
